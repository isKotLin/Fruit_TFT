<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tmall.ultraviewpager.UltraViewPager
        android:id="@+id/ultra_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/commitclick_bt"
        android:layout_width="192dp"
        android:layout_height="52dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="35dp"
        android:background="@drawable/button_selector"
        android:paddingLeft="35dp"
        android:text="@string/select"
        android:textColor="#FFE026"
        android:textSize="@dimen/text_size_22" />

    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:background="#BF000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_position_01"
                    android:layout_width="73dp"
                    android:layout_height="56dp"
                    android:src="@drawable/btn_icon_09_1" />
                <ImageView
                    android:id="@+id/iv_position_02"
                    android:layout_width="73dp"
                    android:layout_height="56dp"
                    android:src="@drawable/btn_icon_01_1" />
                <ImageView
                    android:id="@+id/iv_position_03"
                    android:layout_width="73dp"
                    android:layout_height="56dp"
                    android:src="@drawable/btn_icon_02_1" />
                <ImageView
                    android:id="@+id/iv_position_04"
                    android:layout_width="73dp"
                    android:layout_height="56dp"
                    android:src="@drawable/btn_icon_03_1" />
                <ImageView
                    android:id="@+id/iv_position_05"
                    android:layout_width="73dp"
                    android:layout_height="56dp"
                    android:src="@drawable/btn_icon_04_1" />
                <ImageView
                    android:id="@+id/iv_position_06"
                    android:layout_width="73dp"
                    android:layout_height="56dp"
                    android:src="@drawable/btn_icon_05_1" />
                <ImageView
                    android:id="@+id/iv_position_07"
                    android:layout_width="73dp"
                    android:layout_height="56dp"
                    android:src="@drawable/btn_icon_06_1" />
                <ImageView
                    android:id="@+id/iv_position_08"
                    android:layout_width="73dp"
                    android:layout_height="56dp"
                    android:src="@drawable/btn_icon_07_1" />
                <ImageView
                    android:id="@+id/iv_position_09"
                    android:layout_width="73dp"
                    android:layout_height="56dp"
                    android:src="@drawable/btn_icon_10_1" />
                <ImageView
                    android:id="@+id/iv_position_10"
                    android:layout_width="73dp"
                    android:layout_height="56dp"
                    android:src="@drawable/btn_icon_08_1" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/btn_arrow_left_1"
                    android:clickable="true"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upcontent_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="Main Menu"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_24" />

                    <com.vigorchip.juice.view.SpacingTextView
                        android:id="@+id/downcontent_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp"
                        android:text="down"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_30" />
                </LinearLayout>

                <TextView
                    android:id="@+id/right_mode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_arrow_right_1"
                    android:clickable="true"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
