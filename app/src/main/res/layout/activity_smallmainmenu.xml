<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bk_02" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="135dp"
        android:background="@drawable/img_band_3"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_time_1" />

            <TextView
                android:id="@+id/min_tv"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/text_color_yellow"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="min"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/sec_tv"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/text_color_yellow"
                android:textSize="@dimen/text_size_28" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="sec"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_28" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/btn_fan_3_1" />


            <com.vigorchip.juice.view.MyWheerView
                android:id="@+id/speed_wpv"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:overScrollMode="never"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbarThumbVertical="@drawable/scrollbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:text="speed"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>

        <TextView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_start_2"
            android:clickable="true"
            android:onClick="smalljudgeClick" />
    </LinearLayout>
</FrameLayout>